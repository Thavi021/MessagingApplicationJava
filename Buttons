public static String gmi,cb2,cb3,cb4,cb5,cb6,cb7,ring; 
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        gmi = CB1.getSelectedItem().toString();
        cb2 = CB2.getSelectedItem().toString();
        cb3 = CB3.getSelectedItem().toString();
        cb4 = CB4.getSelectedItem().toString();
        cb5 = CB5.getSelectedItem().toString();
        cb6 = CB6.getSelectedItem().toString();
        cb7 = CB7.getSelectedItem().toString();
        ring = cell.getText();

        // Creating an instance of file
        Path path
        = Paths.get("C:\\Users\\Thaveshan Naidoo\\Desktop\\XBCAD_REQ.txt");

        // Custom string as an input
        String str
        = "REQUEST LOG FROM CLIENT\n "
        + "------------\n"
        + "\n CLIENTS GROSS MONTHLY INCOME: " + gmi
        + "\n 1.DOES CLIENT HAVE  FOOD AND WATER? " + cb2
        + "\n 2.DOES CLIENT HAVE A LITER BOX AND LITTER? " + cb3
        + "\n 3.DOES CLIENT HAVE A WARM BED? " + cb4
        + "\n 4.DOES THE CLIENT HAVE TOYS? " + cb5
        + "\n 5.DOES THE CLIENT HAVE SCRATCHERS? " + cb6
        + "\n 6.DOES THE CLIENT HAVE A BRUSH AND NAIL CLIPPERS? " + cb7
        + "\n Phone: " + ring;
        String str2=
         "RESPONSE FROM PAWS R US\n "
        + "-------------------------------------\n"
        + "\n CLIENTS GROSS MONTHLY INCOME: " + gmi
        + "\n 1.DOES CLIENT HAVE  FOOD AND WATER? " + cb2
        + "\n 2.DOES CLIENT HAVE A LITER BOX AND LITTER? " + cb3
        + "\n 3.DOES CLIENT HAVE A WARM BED? " + cb4
        + "\n 4.DOES THE CLIENT HAVE TOYS? " + cb5
        + "\n 5.DOES THE CLIENT HAVE SCRATCHERS? " + cb6
        + "\n 6.DOES THE CLIENT HAVE A BRUSH AND NAIL CLIPPERS? " + cb7
                + "-------------------------------------\n"
        + "\n               APPROVED";
        String str3=
         "RESPONSE FROM PAWS R US\n "
        + "------------------------------------\n"
        + "\n CLIENTS GROSS MONTHLY INCOME: " + gmi
        + "\n 1.FOOD AND WATER? " + cb2
        + "\n 2.LITER BOX AND LITTER? " + cb3
        + "\n 3.WARM BED? " + cb4
        + "\n 4.TOYS? " + cb5
        + "\n 5.SCRATCHERS? " + cb6
        + "\n 6.BRUSH AND NAIL CLIPPERS? " + cb7
                + "-------------------------------------\n"
        + "\n               DECLINED";
        
        if(gmi=="R500-R1000"||gmi=="0-R500"||cb2=="NO"||cb3=="NO")
        {
            jTextArea2.setText(str3);
        }
        else
        {
            jTextArea2.setText(str2);
        }

        // Try block to check for exceptions
        try {
            // Now calling Files.writeString() method
            // with path , content & standard charsets
            Files.writeString(path, str,
                StandardCharsets.UTF_8);

            jTextArea1.setText(str);
            JOptionPane.showMessageDialog(null,"REQUEST SENT");

        }
        // Catch block to handle the exception
        catch (IOException ex) {
            // Print messqage exception occurred as
            // invalid. directory local path is passed
            jTextArea1.setText("Invalid Path");
    }                                        
   
    }    
